<section class="add-classification">
    <div class="container">
        <h1 class="page-title">
            <%= title %>
        </h1>

        <% if (message && message.length) { %>
            <div class="notice">
                <%= message[0] %>
            </div>
            <% } %>

                <% if (errors && errors.length) { %>
                    <ul class="notice">
                        <% errors.forEach((error)=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <form action="/inv/add-classification" method="post" class="form">
                            <label for="classification_name">Classification Name</label>
                            <input type="text" id="classification_name" name="classification_name" required
                                pattern="[A-Za-z0-9]+"
                                value="<%= typeof classification_name != 'undefined' ? classification_name : '' %>" />
                            <p class="helper-text">
                                Use letters and numbers only, no spaces or special characters.
                            </p>
                            <button type="submit">Add Classification</button>
                        </form>
    </div>
</section>