<section class="inventory-management">
    <div class="container">
        <header class="inventory-header">
            <h1 class="page-title">
                <%= title %>
            </h1>
        </header>

        <% const hasMessage=typeof message !=="undefined" && message && message.length %>
            <% if (hasMessage) { %>
                <div class="notice">
                    <%= message[0] %>
                </div>
                <% } %>

                    <div class="management-actions">
                        <h2>Manage Inventory</h2>
                        <p>Select a classification to see the inventory.</p>

                        <label for="classificationList">Classification</label>
                        <%- classificationSelect %>
                    </div>

                    <table id="inventoryDisplay"></table>

                    <noscript>
                        JavaScript must be enabled to use this page.
                    </noscript>

                    <script src="/js/inventory.js"></script>
    </div>
</section>