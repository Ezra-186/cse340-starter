<h1 class="account-heading">
    <%= title %>
</h1>

<%- messages() %>
<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

    <form class="account-form" action="/account/login" method="post">
        <label for="account_email">Email</label>
        <input type="email" id="account_email" name="account_email" required value="<%= locals.account_email %>" />

        <label for="account_password">Password</label>

        <div class="password-hint">
            Password must be at least 12 characters and contain at least 1 number,
            1 capital letter and 1 special character.
        </div>

        <input type="password" id="account_password" name="account_password" required
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" />

        <button type="submit">Login</button>
    </form>

    <p class="account-register-link">
        Need an account?
        <a href="/account/register">Register here</a>
    </p>