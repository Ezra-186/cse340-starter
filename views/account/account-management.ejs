<section class="account-management">
    <div class="container">
        <h1 class="page-title">
            <%= title %>
        </h1>

        <% if (message && message.length) { %>
            <div class="notice">
                <%= message[0] %>
            </div>
            <% } %>

                <h2>Welcome <%= account_firstname %>
                </h2>

                <p>
                    <a href="/account/update/<%= account_id %>">
                        Update account information
                    </a>
                </p>

                <h3>Saved Vehicles</h3>
                <p>
                    <a href="/account/favorites">
                        View saved vehicles
                    </a>
                </p>

                <% if (account_type==="Employee" || account_type==="Admin" ) { %>
                    <h3>Inventory Management</h3>
                    <p>
                        <a href="/inv/">Go to Inventory Management</a>
                    </p>
                    <% } %>
    </div>
</section>
